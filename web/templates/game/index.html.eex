<h1>Games</h1>

<%= if Enum.empty? @games do %>
  <p>
    Looks like you haven't created any games yet.
  </p>
<% else %>
  <ul>
    <%= @games |> Enum.map fn game -> %>
      <li>
        <%= link game.name, to: game_path(@conn, :show, game.id) %>  (<%= link "Edit", to: game_path(@conn, :edit, game) %>)
      </li>
    <% end %>
  </ul>
<% end %>

<div>
  <%= link "Create a new game", to: game_path(@conn, :new) %>
</div>
